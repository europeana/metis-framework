<article class="search-list-item cf {{^ img.src }}missing-image{{/ img.src }}">

  <div class="item-preview">
    <div class="item-image">
      <div class="inner">

      {{# img.src }}
        <a class="link" target="{{target}}" href="{{object_url}}" tabindex="-1">
           <img src="{{img.src}}" alt="{{ title }}" />
        </a>
      {{/ img.src }}

      {{^ img.src }}
        <a class="link show-with-grid" target="{{target}}" href="{{object_url}}">
             <span class="missing-image-text show-with-grid">
               {{ title }} {{#year.long}}<span class="date">({{ year.long }})</span>{{/year.long}}{{#agent}} | {{ agent }}{{/agent}}
               {{text.medium}}
             </span>
        </a>
      {{/ img.src }}

      </div>
    </div>
  </div>

  {{^ img.src }}
  <div class="item-info show-with-grid">
    {{>molecules/components/search/_search-listitem-icon}}
  </div>
  {{/ img.src }}


  <div class="item-info {{^ img.src }}hide-with-grid{{/ img.src }}">

    <h2><a href="{{object_url}}"{{#link_attrs}} {{name}}="{{value}}"{{/link_attrs}}>{{ title }} {{#year.long}}<span class="date">({{ year.long }})</span>{{/year.long}}<span class="hide-with-grid">{{#agent}} | {{ agent }}{{/agent}}</span></a></h2>

    {{#agent}}
      <h3 class="show-with-grid"><a href="{{object_url}}"{{#link_attrs}} {{name}}="{{value}}"{{/link_attrs}}>{{ . }}</a></h3>
    {{/agent}}

    {{#text}}
    <p class="excerpt">
       {{text.medium}}
    </p>
    {{/text}}

    {{#concepts}}
    <ul class="item-concepts comma-list">
      {{#items}}
      <li>{{text}}</li>
      {{/items}}
    </ul>
    {{/concepts}}

    {{#origin}}
      {{#url}}
      <div class="item-origin">
      <a href="{{origin.url}}" class="external" target="_blank">{{ i18n.site.results.list.view-at-provider }} {{origin.text}}</a>
      </div>
      {{/url}}
    {{/origin}}

    <footer>
      <div class="item-metadata">

        {{>molecules/components/search/_search-listitem-icon}}

        {{# channels.disabled }}
          <span class="item-themes">
            {{i18n.site.results.list.in-channel}}:
            {{# items }}
            <a href="{{url}}" class="highlight">{{text}}</a>,
            {{/ items }}
          </span>
        {{/ channels.disabled }}
      </div>

      {{# menus.actions_disabled }}
      <div class="item-actions">

        <a href="path/to/save" class="action-save">
          <svg class="icon icon-star">
            <use xlink:href="#icon-star"></use>
          </svg>{{i18n.site.results.actions.product-save}}
        </a>

        <div class="action-select">
          <input type="checkbox" name="selected[]" id="itemx">
        </div>
      </div>
      {{/ menus.actions_disabled }}

    </footer>
  </div>

  <div class="item-agent-data show-with-grid">
      <div class="item-agent">{{#agent}}{{.}}{{/agent}}{{^agent}}<br/>{{/agent}}</div>
  </div>

</article>