<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>eu.europeana.metis</groupId>
  <artifactId>metis-framework</artifactId>
  <packaging>pom</packaging>
  <version>1.0-SNAPSHOT</version>

  <dependencies>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>${version.slf4j}</version>
    </dependency>
    <!-- Binding for Log4J -->
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-slf4j-impl</artifactId>
      <version>${version.log4j}</version>
    </dependency>
    <!-- Log4j API and Core implementation required for binding -->
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-api</artifactId>
      <version>${version.log4j}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.logging.log4j</groupId>
      <artifactId>log4j-core</artifactId>
      <version>${version.log4j}</version>
    </dependency>
    <dependency>
      <groupId>software.betamax</groupId>
      <artifactId>betamax-junit</artifactId>
      <version>${version.betamax}</version>
      <scope>test</scope>
    </dependency>

  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
          <testSource>1.8</testSource>
          <testTarget>1.8</testTarget>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>${version.surefire.plugin}</version>
        <configuration>
          <!-- Travis build workaround -->
          <argLine>-Xms1024m -Xmx2048m</argLine>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>cobertura-maven-plugin</artifactId>
        <version>2.7</version>
        <configuration>
          <formats>
            <format>xml</format>
          </formats>
          <check/>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.eluder.coveralls</groupId>
        <artifactId>coveralls-maven-plugin</artifactId>
        <version>4.0.0</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.5.3</version>
      </plugin>
    </plugins>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>${version.maven.compiler.plugin}</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>${version.junit}</version>
        <scope>test</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>cobertura-maven-plugin</artifactId>
        <version>2.7</version>
        <configuration>
          <formats>
            <format>xml</format>
          </formats>
          <check/>
        </configuration>
        <reportSets>
          <reportSet>
            <reports>
              <report>cobertura</report>
            </reports>
          </reportSet>
        </reportSets>
      </plugin>
    </plugins>
  </reporting>
  <modules>
    <module>metis-core</module>
    <module>metis-hierarchies</module>
    <module>metis-dereference</module>
    <module>metis-redirect</module>
    <module>metis-identifiers</module>
    <module>metis-validation</module>
    <module>metis-pandora</module>
    <module>metis-enrichment</module>
    <module>metis-common</module>
    <module>metis-preview</module>
    <module>metis-link-checking</module>
    <module>metis-normalization</module>
  </modules>
  <repositories>
    <repository>
      <id>libs-release-local</id>
      <name>artifactory.eanadev.org-releases</name>
      <url>http://artifactory.eanadev.org/artifactory/libs-release-local</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <!-- Europeana Labs UIM external libraries repository -->
    <repository>
      <id>artifactory.eanadev.org</id>
      <name>artifactory.eanadev.org-releases</name>
      <url>http://artifactory.eanadev.org/artifactory/ext-release-local</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>

    <repository>
      <id>ext-snapshots-local</id>
      <name>artifactory.eanadev.org-snapshot</name>
      <url>http://artifactory.eanadev.org/artifactory/ext-snapshot-local</url>
      <releases>
        <enabled>false</enabled>
      </releases>
    </repository>


    <!-- Europeana Labs Java.net Maven 2 Repository (mirror) -->
    <repository>
      <id>maven2-repository.dev.java.net</id>
      <name>Java.net Maven 2 Repository (mirror)</name>
      <url>http://artifactory.eanadev.org/artifactory/java.net.m2</url>
    </repository>


    <!-- Europeana Labs UIM releases repository -->
    <repository>
      <id>uim-releases-local</id>
      <name>UIM Releases Repository</name>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <url>http://artifactory.eanadev.org/artifactory/uim-releases-local</url>
    </repository>


    <!-- Europeana Labs Core snapshot libraries -->
    <repository>
      <id>artifactory.eanadev.org.corelibs.eu.snapshot</id>
      <name>artifactory.eanadev.org.libs-snapshot-local</name>
      <url>http://artifactory.eanadev.org/artifactory/libs-snapshot-local</url>
      <releases>
        <enabled>false</enabled>
      </releases>
    </repository>
    <repository>
      <id>sonatype-snapshots</id>
      <name>sonatype-snapshots</name>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
      <releases>
        <enabled>false</enabled>
      </releases>
    </repository>
  </repositories>
  <!-- Github connection -->
  <scm>
    <connection>scm:git:https://github.com/europeana/metis-framework</connection>
    <url>https://github.com/europeana/metis-framework</url>
    <tag>HEAD</tag>
    <developerConnection>scm:git:https://github.com/europeana/metis-framework</developerConnection>
  </scm>


  <properties>
    <version.betamax>2.0.1</version.betamax>
    <version.slf4j>1.7.23</version.slf4j>
    <version.log4j>2.8</version.log4j>
    <version.surefire.plugin>2.18</version.surefire.plugin>
    <version.maven.compiler.plugin>3.6.1</version.maven.compiler.plugin>
    <version.spring>4.2.5.RELEASE</version.spring>
    <version.junit>4.12</version.junit>
    <version.embeddedMongo>2.0.0</version.embeddedMongo>
    <version.commonsio>2.4</version.commonsio>
    <version.commonslang>2.6</version.commonslang>
    <version.gson>2.2.1</version.gson>
    <version.openstack>1.9.0</version.openstack>
    <version.swagger>2.3.1</version.swagger>
    <version.jackson>2.6.5</version.jackson>
    <version.powermock>1.6.4</version.powermock>
    <version.mockito>1.10.19</version.mockito>
    <version.corelib>2.6.0</version.corelib>
    <version.servletapi>3.1.0</version.servletapi>
    <version.commons-fileupload>1.3</version.commons-fileupload>
    <version.morphia>1.3.2</version.morphia>
    <version.xsom>20140925</version.xsom>
    <version.commonscompress>1.11</version.commonscompress>
    <version.springSecurity>4.2.0.RELEASE</version.springSecurity>
    <version.springLdap>2.2.0.RELEASE</version.springLdap>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

</project>
